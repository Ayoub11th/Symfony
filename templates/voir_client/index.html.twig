{% extends 'base.html.twig' %}

{% block title %}Voir tous nos clients {% endblock %}

{% block body %}

<table class="table table-hover">
    <thead>
      <tr>
        <th> Nom </th>
        <th> Prénom </th>
        <th> E-mail </th>
        <th> Date de création </th>
        <th> action </th>
      </tr>
    </thead>
    <tbody>
		{% for client in clients %}
      <tr>
        <td> {{ client.nom }} </td>
        <td> {{ client.prenom }} </td>
        <td> {{ client.email }} </td>
        <td> {{ client.dateCreation|date('d/m/Y') }}  </td>
        <td> 
        
        <a href="{{ path('modif_client', {'id': client.id}) }}" class="btn btn-primary btn" alt="modifier"> <i class="icon-edit"></i> </a> 
        {# <a href="{{ path('voir_client', {'id': client.id}) }}" class="btn btn-success btn"> <i class="icon-eye-open"></i> </a>  #}
        <a href="{{ path('api_client_deleteC', {'id': client.id}) }}" onclick="return confirm('êtes-vous sûr de voulir supprimer Mr. {{client.nom}} ?')"  class="btn btn-danger btn" alt="supprimer"> <i class="icon-trash"></i> </a>
        </td>
      </tr>
  	{% endfor %}
    </tbody>
  </table>

{% endblock %}
